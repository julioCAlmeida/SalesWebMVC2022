@model SalesWebMVC2022.Models.Seller


@{
	ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are your sure you want to delete this?</h3>

<div>
	<h4>Seller</h4>
	<hr/>
	<dl>
		<dt>@Html.DisplayNameFor(model => model.Name)</dt>
		<dd>@Html.DisplayFor(model => model.Name)</dd>

		<dt>@Html.DisplayNameFor(model => model.Email)</dt>
		<dd>@Html.DisplayFor(model => model.Email)</dd>

		<dt>@Html.DisplayNameFor(model => model.BirthDate)</dt>
		<dd>@Html.DisplayFor(model => model.BirthDate)</dd>

		<dt>@Html.DisplayNameFor(model => model.BaseSalary)</dt>
		<dd>@Html.DisplayFor(model => model.BaseSalary)</dd>
	</dl>
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id"/>
		<input type="submit" value="Delete" class="btn btn-danger"/>
		<a asp-action="Index">Back to list</a>
	</form>
</div>


<!-- modal nao utilizado -->

<div class="modal fade" id="deleteSuccessModal" tabindex="-1" role="dialog" aria-labelledby="deleteSuccessModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="deleteSuccessModalLabel">Vendedor Excluído com Sucesso</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				O vendedor foi excluído com sucesso.
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
			</div>
		</div>
	</div>
</div>




